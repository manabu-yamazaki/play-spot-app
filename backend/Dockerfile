FROM ruby:3.0
  # =========ローカルと本番切り替え===========
# RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs
RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs default-mysql-client
  # ======================================

ENV APP_PATH /play-spot-app

RUN mkdir $APP_PATH
WORKDIR $APP_PATH

COPY Gemfile $APP_PATH/backend/Gemfile
COPY Gemfile.lock $APP_PATH/backend/Gemfile.lock
  # =========ローカルと本番切り替え===========
RUN gem install bundler
  # ======================================
RUN bundle install

  # =========ローカルと本番切り替え===========
RUN mkdir -p tmp/sockets
  # ======================================

